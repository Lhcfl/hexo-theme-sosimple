extends main

block site_title
  != __("Tags") + " 路 " + page.tag + " 路 " + config.title

block description
  - var desc = __("Tags") + " 路 " + page.tag + " - " + config.title;
  meta(name="description", content=desc)

block content
  .content
    .archive
      h1= __("Tags") + " 路 " + page.tag
      include mixins
      +make_post_list
      +make_pager(__('prev'), __('next'))
